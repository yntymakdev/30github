generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String       @id @default(cuid())
  userId      String
  title       String?
  description String?
  imageUrl    String?
  price       Float?
  isPublished Boolean      @default(false)
  categoryId  String?
  attachments Attachment[]
  createdAt   DateTime     @default(now())
  updateAt    DateTime     @updatedAt

  @@map("courses")
}

model Attachment{


}
